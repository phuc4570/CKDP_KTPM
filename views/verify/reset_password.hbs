  <script>
        $('#newPassword').change(function(){
            if($(this).val() === $('#renewPassword').val()){
                $('#error-newpassword').hide();
                $('#success-newpassword').show();
            }else{
                $('#error-newpassword').show();
                $('#success-newpassword').hide();
            }
        })

        $('#renewPassword').change(function(){
            if($(this).val() === $('#renewPassword').val()){
                $('#error-newpassword').hide();
                $('#success-newpassword').show();
            }else{
                $('#error-newpassword').show();
                $('#success-newpassword').hide();
            }
        })
    </script>

