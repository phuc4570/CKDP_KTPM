
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active">Statistic</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <div class="container-chart">
        <div class="row">
            <div class="col-7">
                <div class="combobox">
                    <div class="title-left">
                        <h3>Doanh thu theo tháng</h3>
                    </div>
                    <select onchange="getDataOfYear()" class="wide w-100 combo-box" id="year">
                        <option value="" selected>Năm {{selectedYear}}</option>

                    </select>
                </div>

                <div id="myChart" style="width:100%; height:280px"></div>


            </div>
            <div class="col">
                <div class="top-ten">
                    <div class="title-left">
                        <h3>Top sản phẩm bán chạy</h3>
                        <table id="statisticTable" class="table table-hover">
                            <thead>
                            <tr>
                                <th scope="col">
                                    Product
                                </th>
                                <th scope="col">
                                    Counts
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                            </tbody>
                            <tfoot></tfoot>
                        </table>
                    </div>
                    <div class="products">
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <script type="text/javascript" src="https://canvasjs.com/assets/script/jquery-1.11.1.min.js"></script>
    <script type="text/javascript" src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
</main><!-- End #main -->

{{#extend "scripts"}}
    <script type="text/javascript" src="/assets_statistic/main.js"></script>
{{/extend}}