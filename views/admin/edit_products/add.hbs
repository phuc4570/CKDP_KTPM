<main id="main" class="main">
    <form method="POST" encType="multipart/form-data">
        <div class="card">
            <h5 class="card-header">
                Add Product
            </h5>
            <div class="card-body">
                <div class="form-group">
                    <label for="txtId">ID</label>
                    <input type="text" class="form-control" id="txtId" name="Id"  value = "{{id}}" readonly autofocus>
                </div>
                <div class="form-group">
                    <label for="txtName">Name Product</label>
                    <input type="text" class="form-control" id="txtName" name="Name" autofocus>
                </div>


                <div class="form-group">
                    <label for="txtPrice">Price</label>
                    <input type="text" class="form-control" id="txtPrice" name="Price">
                </div>
                <div class="form-group">
                    <label for="CategorySelect">Category</label>
                    <select name="Category" id="CategorySelect" class="form-control">
                        <option value="Cơm">Cơm</option>
                        <option value="Mì">Mì</option>
                        <option value="Nước">Nước</option>
                        <option value="Khác">Khác</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="StatusSelect">Status</label>
                    <select name="Status" id="StatusSelect" class="form-control">
                        <option value="On Stock" selected>On Stock</option>
                        <option value="Out of Stock">Out of Stock</option>
                        <option value="Suspend">Suspend</option>
                    </select>
                </div>
                <label for="txtIMAGE" class="font-weight-bold">IMAGE</label>
                <input type="file" name="image" accept="image/*"/>
            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-outline-secondary" href="/admin/edit_products" role="button">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Back to List
                </a>
                <button type="submit" class="btn btn-dark" formaction="/admin/edit_products/add">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Add
                </button>
            </div>
        </div>
    </form>
</main>

{{#extend "scripts"}}
    <script type="text/javascript" src="/assets_editproducts/js/upload_image.js"></script>
{{/extend}}