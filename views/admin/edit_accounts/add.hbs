<main id="main" class="main">
    <form method="POST">
        <div class="card">
            <h5 class="card-header">
                Add Lecturer Account
            </h5>
            <div class="card-body">
                <div class="form-group">
                    <label for="txtUserName">User Name</label>
                    <input type="text" class="form-control" id="txtUserName" name="UserName"  autofocus>
                </div>
                <div class="form-group">
                    <label for="txtPass">Password</label>
                    <input type="password" class="form-control" id="txtPass" name="Password">
                </div>
                <div class="form-group">
                    <label for="permissionSelect">Authorization</label>
                    <select name="Permission" id="permissionSelect" class="form-control">
                        <option value="1">Lecturer</option>
                        <option value="2">Admin</option>
                    </select>
                </div>


            </div>
            <div class="card-footer text-muted">
                <a class="btn btn-outline-secondary" href="/admin/edit_accounts" role="button">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Back to List
                </a>
                <button type="submit" class="btn btn-dark" formaction="/admin/edit_accounts/add">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Add
                </button>
            </div>
        </div>
    </form>
</main>