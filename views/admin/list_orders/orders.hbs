
<main id="main" class="main">
    <div class="d-flex flex-row bd-highlight mt-3 mr-2 justify-content-between">
        <h5 class="ml-3">LIST ORDERS</h5>
    </div>

    <div class="p-2 bg-muted">
        <div class="card h-100 mb-100 shadow">
            <h5 class="card-header bg-white text-light d-flex justify-content-between">
                Orders
            </h5>
            <div class="search-bar col-6">

                <input
                        id="search"
                        type="text"
                        name="name"
                        placeholder="Search"
                        title="Enter search keyword"
                />

                <button id="searchButton" type="submit" title="Search" class="fas fa-search"></button>

                </div>
            </div>
        </div>
            <div class="form-group">
                <label for="selected_form"><h5>Filtering by Status:</h5></label>
                <select class="form-control" id="selected_form">
                    <option value="All" selected>All</option>
                    <option value="Done" >Done</option>
                    <option value="Waiting">Waiting</option>
                    <option value="Cancel">Cancel</option>
                </select>
            </div>
            <div class="card-body">
                <table id="ordersTable" class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">
                            ID
                        </th>
                        <th scope="col">
                            Phone number
                        </th>
                        <th scope="col">
                            Order
                        </th>
                        <th scope="col">
                            Status
                        </th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>

                    </tbody>
                    <tfoot></tfoot>
                </table>
                <ul class="pagination justify-content-center" style="margin:20px 0">
                </ul>
            </div>
        </div>
    </div>

</main>

{{#extend "scripts"}}
    <script type="text/javascript" src="/assets_listorders/js/listorders-ajax.js"></script>
{{/extend}}
